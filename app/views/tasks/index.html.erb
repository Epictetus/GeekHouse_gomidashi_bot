<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Who</th>
    <th>For</th>
    <th>When</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.who %></td>
    <td><%= task.for %></td>
    <td><%= task.when %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

